<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    tools:context=".PlayerActivity"
    android:background="@color/backround" >
    
    <TextView
        android:id="@+id/act_playeractivity_banner"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="BANNER"
        android:gravity="center"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/act_playeractivity_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="LOGO"
        android:scaleType="fitCenter"
        android:src="@drawable/logohiphopstage"
        android:layout_below="@id/act_playeractivity_banner"
 />

    <LinearLayout
        android:id="@+id/act_playeractivity_bottomrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/act_playeractivity_btnplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LIST" />

        <Button
            android:id="@+id/act_playeractivity_btnfb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FB" />

        <Button
            android:id="@+id/act_playeractivity_btnpho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PHO" />

        <Button
            android:id="@+id/act_playeractivity_btnnew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NEW" />
    </LinearLayout>
   
    <Button
        android:id="@+id/act_playeractivity_btnplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/act_playeractivity_bottomrow"
        android:text="PLAY"
         />

</RelativeLayout>